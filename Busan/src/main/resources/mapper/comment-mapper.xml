  <mapper namespace="com.kh.busan.api.model.mapper.CommentMapper">
  
  	<select id="getComments" parameterType="Long" resultType="CommentDTO">
  		SELECT
  				UC_SEQ foodNo,
  				writer,
  				content
  		  FROM
  		  		TB_FOOD_REPLY
  		 WHERE
  		 		UC_SEQ = #{foodNo}
  		 ORDER
  		 	BY
  		 		CONTENT DESC
  	</select>
  
  
  </mapper>